<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:EpTools.Desktop.ViewModels"
             xmlns:views="using:EpTools.Desktop.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="EpTools.Desktop.Views.NetworkView"
             x:DataType="vm:MainWindowViewModel">

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Identity Selector -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" Spacing="10">
            <ComboBox x:Name="IdentitySelector"
                      Width="300"
                      ItemsSource="{Binding Identities}"
                      SelectedItem="{Binding SelectedIdentity, Mode=TwoWay}"
                      PlaceholderText="Select Identity">
                <ComboBox.ItemTemplate>
                    <DataTemplate x:DataType="vm:IdentityViewModel">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="{Binding Alias}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Location}" Opacity="0.6"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button Content="Add Identity" Click="AddIdentity_Click"/>
            <Button Content="Remove" Click="RemoveIdentity_Click"
                    IsEnabled="{Binding SelectedIdentity, Converter={x:Static ObjectConverters.IsNotNull}}"/>
        </StackPanel>

        <!-- Identity Details -->
        <Border Grid.Row="1" Margin="10,0,10,10" Padding="10"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8"
                IsVisible="{Binding SelectedIdentity, Converter={x:Static ObjectConverters.IsNotNull}}">
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto">
                <TextBox Grid.Column="0" Margin="5"
                         Watermark="Alias Name"
                         Text="{Binding SelectedIdentity.Alias, Mode=TwoWay}"/>
                <TextBox Grid.Column="1" Margin="5"
                         Watermark="Location / Mesh Address"
                         Text="{Binding SelectedIdentity.Location, Mode=TwoWay}"/>
            </Grid>
        </Border>

        <!-- Reputation Networks -->
        <ScrollViewer Grid.Row="2" Margin="10,0,10,10"
                      IsVisible="{Binding SelectedIdentity, Converter={x:Static ObjectConverters.IsNotNull}}">
            <StackPanel>
                <TextBlock Text="Reputation &amp; Favors" FontWeight="Bold" FontSize="16"
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <WrapPanel HorizontalAlignment="Center">
                    <views:RepNetworkWidget Margin="5"
                                            Label="@-rep (Anarchist)"
                                            RepNetwork="{Binding SelectedIdentity.ARep}"/>
                    <views:RepNetworkWidget Margin="5"
                                            Label="c-rep (Civic)"
                                            RepNetwork="{Binding SelectedIdentity.CRep}"/>
                    <views:RepNetworkWidget Margin="5"
                                            Label="f-rep (Fame)"
                                            RepNetwork="{Binding SelectedIdentity.FRep}"/>
                    <views:RepNetworkWidget Margin="5"
                                            Label="g-rep (Guanxi)"
                                            RepNetwork="{Binding SelectedIdentity.GRep}"/>
                    <views:RepNetworkWidget Margin="5"
                                            Label="i-rep (The Eye)"
                                            RepNetwork="{Binding SelectedIdentity.IRep}"/>
                    <views:RepNetworkWidget Margin="5"
                                            Label="r-rep (Research)"
                                            RepNetwork="{Binding SelectedIdentity.RRep}"/>
                    <views:RepNetworkWidget Margin="5"
                                            Label="x-rep (Explore)"
                                            RepNetwork="{Binding SelectedIdentity.XRep}"/>
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- No Identity Message -->
        <Border Grid.Row="2" Margin="10"
                IsVisible="{Binding SelectedIdentity, Converter={x:Static ObjectConverters.IsNull}}">
            <TextBlock Text="No identities created yet. Click 'Add Identity' to create one."
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Opacity="0.6"/>
        </Border>
    </Grid>
</UserControl>
