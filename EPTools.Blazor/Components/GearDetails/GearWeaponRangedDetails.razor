@using EPTools.Core.Models.EPDataModels

<MudText Typo="Typo.h6" Color="Color.Primary" Class="mt-4 mb-2">Ranged Specs</MudText>

<MudGrid>
    <MudItem xs="6">
        <MudTextField @bind-Value="Model.Damage" 
                      Label="Damage Formula" 
                      Placeholder="e.g. 2d10 + 4" 
                      Variant="Variant.Outlined" 
                      Margin="Margin.Dense"
                      Adornment="Adornment.Start" 
                      AdornmentIcon="@Icons.Material.Filled.Bolt" />
    </MudItem>
    <MudItem xs="6">
        <MudTextField @bind-Value="Model.DamageAvg" 
                      Label="Average Dmg" 
                      HelperText="Useful for quick resolution" 
                      Variant="Variant.Outlined" 
                      Margin="Margin.Dense" />
    </MudItem>
    
    <MudItem xs="6">
        <MudTextField @bind-Value="Model.Range" 
                      Label="Range" 
                      Placeholder="e.g. 50/150/300" 
                      Variant="Variant.Outlined" 
                      Margin="Margin.Dense"
                      Adornment="Adornment.Start" 
                      AdornmentIcon="@Icons.Material.Filled.Straighten" />
    </MudItem>

    <MudItem xs="6">
        <MudTextField @bind-Value="Model.FireModes" 
                      Label="Firing Modes" 
                      Placeholder="e.g. SS, SA, BF, FA" 
                      Variant="Variant.Outlined" 
                      Margin="Margin.Dense" />
    </MudItem>

    <MudItem xs="6">
        <MudTextField @bind-Value="Model.Ammo" 
                      Label="Ammo Capacity" 
                      Placeholder="e.g. 15+1" 
                      Variant="Variant.Text" 
                      Margin="Margin.Dense" />
    </MudItem>
    
    <MudItem xs="6">
        <MudTextField @bind-Value="Model.WareType" 
                      Label="Ware Integration" 
                      HelperText="If built-in (e.g. Cyberlimb)" 
                      Variant="Variant.Text" 
                      Margin="Margin.Dense" />
    </MudItem>

    <MudItem xs="12">
        <MudTextField @bind-Value="Model.Notes" 
                      Label="Weapon Traits / Notes" 
                      Placeholder="e.g. Two-Handed, Armor Piercing" 
                      Variant="Variant.Outlined" 
                      Lines="2" />
    </MudItem>
</MudGrid>

@code {
    [Parameter] public required GearWeaponRanged Model { get; set; }
}