<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:EPTools.Desktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EPTools.Desktop.Views.TraitsView"
             x:DataType="vm:MainWindowViewModel">

    <Grid RowDefinitions="Auto,*">
        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5" Spacing="5">
            <Button Content="Add Trait" Click="AddTrait_Click"/>
        </StackPanel>

        <!-- Traits List -->
        <Border Grid.Row="1" Margin="5"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8" Padding="10">
            <Grid RowDefinitions="Auto,*">
                <TextBlock Grid.Row="0" Text="Ego Traits" FontWeight="Bold" FontSize="16"
                           Margin="0,0,0,10"/>
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding EgoTraits}"
                          AutoGenerateColumns="False"
                          CanUserReorderColumns="False"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="False"
                          GridLinesVisibility="Horizontal"
                          IsReadOnly="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name"
                                            Binding="{Binding Name}"
                                            Width="*"
                                            IsReadOnly="False"/>
                        <DataGridTemplateColumn Header="Type" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="vm:EgoTraitViewModel">
                                    <ComboBox ItemsSource="{x:Static vm:EgoTraitViewModel.AvailableTypes}"
                                              SelectedItem="{Binding Type, Mode=TwoWay}"
                                              HorizontalAlignment="Stretch"
                                              VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Level"
                                            Binding="{Binding Level}"
                                            Width="60"
                                            IsReadOnly="False"/>
                        <DataGridTextColumn Header="CP"
                                            Binding="{Binding Cost}"
                                            Width="60"
                                            IsReadOnly="False"/>
                        <DataGridTextColumn Header="Summary"
                                            Binding="{Binding Summary}"
                                            Width="200"
                                            IsReadOnly="False"/>
                        <DataGridTextColumn Header="Description"
                                            Binding="{Binding Description}"
                                            Width="250"
                                            IsReadOnly="False"/>
                        <DataGridTemplateColumn Header="" Width="40">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="vm:EgoTraitViewModel">
                                    <Button Content="X"
                                            Click="DeleteTrait_Click"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Padding="5,2"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
