<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:EPTools.Desktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EPTools.Desktop.Views.SkillsView"
             x:DataType="vm:MainWindowViewModel">

    <Grid RowDefinitions="Auto,*">
        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5" Spacing="5">
            <Button Content="Add Knowledge Skill"
                    Click="AddKnowledgeSkill_Click"/>
            <Button Content="Add Exotic Skill"
                    Click="AddExoticSkill_Click"/>
        </StackPanel>

        <!-- Skills organized by type -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="10" Margin="5">
                <!-- Active Skills Section -->
                <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Active Skills" FontWeight="Bold" FontSize="16"
                                   Margin="0,0,0,10"/>
                        <DataGrid ItemsSource="{Binding ActiveSkills}"
                                  AutoGenerateColumns="False"
                                  CanUserReorderColumns="False"
                                  CanUserResizeColumns="True"
                                  CanUserSortColumns="False"
                                  GridLinesVisibility="Horizontal"
                                  IsReadOnly="False"
                                  MaxHeight="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name"
                                                    Binding="{Binding Name}"
                                                    Width="*"
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Header="Aptitude"
                                                    Binding="{Binding Aptitude}"
                                                    Width="100"
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Header="Specialization"
                                                    Binding="{Binding Specialization}"
                                                    Width="150"
                                                    IsReadOnly="False"/>
                                <DataGridTextColumn Header="Rank"
                                                    Binding="{Binding Rank}"
                                                    Width="60"
                                                    IsReadOnly="False"/>
                                <DataGridTemplateColumn Header="Total" Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate x:DataType="vm:EgoSkillViewModel">
                                            <TextBlock Text="{Binding Total}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       FontWeight="Bold"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- Knowledge Skills Section -->
                <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Knowledge Skills" FontWeight="Bold" FontSize="16"
                                   Margin="0,0,0,10"/>
                        <DataGrid ItemsSource="{Binding KnowledgeSkills}"
                                  AutoGenerateColumns="False"
                                  CanUserReorderColumns="False"
                                  CanUserResizeColumns="True"
                                  CanUserSortColumns="False"
                                  GridLinesVisibility="Horizontal"
                                  IsReadOnly="False"
                                  MaxHeight="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name"
                                                    Binding="{Binding Name}"
                                                    Width="*"
                                                    IsReadOnly="False"/>
                                <DataGridTemplateColumn Header="Aptitude" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate x:DataType="vm:EgoSkillViewModel">
                                            <ComboBox ItemsSource="{x:Static vm:EgoSkillViewModel.KnowledgeAvailableAptitudes}"
                                                      SelectedItem="{Binding Aptitude, Mode=TwoWay}"
                                                      HorizontalAlignment="Stretch"
                                                      VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Specialization"
                                                    Binding="{Binding Specialization}"
                                                    Width="150"
                                                    IsReadOnly="False"/>
                                <DataGridTextColumn Header="Rank"
                                                    Binding="{Binding Rank}"
                                                    Width="60"
                                                    IsReadOnly="False"/>
                                <DataGridTemplateColumn Header="Total" Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate x:DataType="vm:EgoSkillViewModel">
                                            <TextBlock Text="{Binding Total}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       FontWeight="Bold"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="" Width="40">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate x:DataType="vm:EgoSkillViewModel">
                                            <Button Content="X"
                                                    Click="DeleteSkill_Click"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    Padding="5,2"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- Exotic Skills Section -->
                <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Exotic Skills" FontWeight="Bold" FontSize="16"
                                   Margin="0,0,0,10"/>
                        <DataGrid ItemsSource="{Binding ExoticSkills}"
                                  AutoGenerateColumns="False"
                                  CanUserReorderColumns="False"
                                  CanUserResizeColumns="True"
                                  CanUserSortColumns="False"
                                  GridLinesVisibility="Horizontal"
                                  IsReadOnly="False"
                                  MaxHeight="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name"
                                                    Binding="{Binding Name}"
                                                    Width="*"
                                                    IsReadOnly="False"/>
                                <DataGridTemplateColumn Header="Aptitude" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate x:DataType="vm:EgoSkillViewModel">
                                            <ComboBox ItemsSource="{x:Static vm:EgoSkillViewModel.ExoticAvailableAptitudes}"
                                                      SelectedItem="{Binding Aptitude, Mode=TwoWay}"
                                                      HorizontalAlignment="Stretch"
                                                      VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Specialization"
                                                    Binding="{Binding Specialization}"
                                                    Width="150"
                                                    IsReadOnly="False"/>
                                <DataGridTextColumn Header="Rank"
                                                    Binding="{Binding Rank}"
                                                    Width="60"
                                                    IsReadOnly="False"/>
                                <DataGridTemplateColumn Header="Total" Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate x:DataType="vm:EgoSkillViewModel">
                                            <TextBlock Text="{Binding Total}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       FontWeight="Bold"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="" Width="40">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate x:DataType="vm:EgoSkillViewModel">
                                            <Button Content="X"
                                                    Click="DeleteSkill_Click"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    Padding="5,2"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
