<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:EPTools.Desktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EPTools.Desktop.Views.GearView"
             x:DataType="vm:MainWindowViewModel">

    <Grid RowDefinitions="*,Auto,*">
        <!-- Local Inventory Section -->
        <Border Grid.Row="0" Margin="5"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8" Padding="10">
            <Grid RowDefinitions="Auto,*">
                <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                    <TextBlock Text="Local Inventory" FontWeight="Bold" FontSize="16"/>
                    <Button Grid.Column="1" Content="Add Item" Click="AddInventoryItem_Click"/>
                </Grid>
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding Inventory}"
                          AutoGenerateColumns="False"
                          CanUserReorderColumns="False"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="False"
                          GridLinesVisibility="Horizontal"
                          IsReadOnly="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name"
                                            Binding="{Binding Name}"
                                            Width="*"
                                            IsReadOnly="False"/>
                        <DataGridTextColumn Header="Description"
                                            Binding="{Binding Description}"
                                            Width="200"
                                            IsReadOnly="False"/>
                        <DataGridTextColumn Header="Qty"
                                            Binding="{Binding Quantity}"
                                            Width="50"
                                            IsReadOnly="False"/>
                        <DataGridCheckBoxColumn Header="Equipped"
                                                Binding="{Binding Equipped}"
                                                Width="70"/>
                        <DataGridCheckBoxColumn Header="Active"
                                                Binding="{Binding Active}"
                                                Width="60"/>
                        <DataGridTextColumn Header="Notes"
                                            Binding="{Binding Notes}"
                                            Width="150"
                                            IsReadOnly="False"/>
                        <DataGridTemplateColumn Header="" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="vm:InventoryItemViewModel">
                                    <StackPanel Orientation="Horizontal" Spacing="2">
                                        <Button Content="S" ToolTip.Tip="Send to Cache"
                                                Click="MoveToCache_Click"
                                                Padding="5,2"/>
                                        <Button Content="X" ToolTip.Tip="Delete"
                                                Click="DeleteInventoryItem_Click"
                                                Padding="5,2"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Splitter -->
        <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch"
                      Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>

        <!-- Caches Section -->
        <Border Grid.Row="2" Margin="5"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8" Padding="10">
            <Grid RowDefinitions="Auto,*">
                <Grid Grid.Row="0" ColumnDefinitions="Auto,Auto,*,Auto,Auto" Margin="0,0,0,10">
                    <TextBlock Text="Storage Caches" FontWeight="Bold" FontSize="16"
                               VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" Margin="10,0,0,0"
                              ItemsSource="{Binding Caches}"
                              SelectedItem="{Binding SelectedCache}"
                              Width="200">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="vm:InventoryCacheViewModel">
                                <TextBlock Text="{Binding Location}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="5">
                        <Button Content="Add Cache" Click="AddCache_Click"/>
                        <Button Content="Delete Cache" Click="DeleteCache_Click"
                                IsEnabled="{Binding SelectedCache, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                    </StackPanel>
                    <Button Grid.Column="4" Content="Add Item" Margin="10,0,0,0"
                            Click="AddItemToCache_Click"
                            IsEnabled="{Binding SelectedCache, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                </Grid>

                <!-- Cache Contents -->
                <Grid Grid.Row="1">
                    <!-- No cache selected -->
                    <TextBlock Text="No cache selected. Add a cache to store items remotely."
                               VerticalAlignment="Center" HorizontalAlignment="Center"
                               IsVisible="{Binding SelectedCache, Converter={x:Static ObjectConverters.IsNull}}"/>

                    <!-- Cache contents -->
                    <DataGrid ItemsSource="{Binding SelectedCache.Items}"
                              IsVisible="{Binding SelectedCache, Converter={x:Static ObjectConverters.IsNotNull}}"
                              AutoGenerateColumns="False"
                              CanUserReorderColumns="False"
                              CanUserResizeColumns="True"
                              CanUserSortColumns="False"
                              GridLinesVisibility="Horizontal"
                              IsReadOnly="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name"
                                                Binding="{Binding Name}"
                                                Width="*"
                                                IsReadOnly="False"/>
                            <DataGridTextColumn Header="Description"
                                                Binding="{Binding Description}"
                                                Width="200"
                                                IsReadOnly="False"/>
                            <DataGridTextColumn Header="Qty"
                                                Binding="{Binding Quantity}"
                                                Width="50"
                                                IsReadOnly="False"/>
                            <DataGridTextColumn Header="Notes"
                                                Binding="{Binding Notes}"
                                                Width="150"
                                                IsReadOnly="False"/>
                            <DataGridTemplateColumn Header="" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate x:DataType="vm:InventoryItemViewModel">
                                        <StackPanel Orientation="Horizontal" Spacing="2">
                                            <Button Content="R" ToolTip.Tip="Retrieve to Local"
                                                    Click="MoveFromCache_Click"
                                                    Padding="5,2"/>
                                            <Button Content="X" ToolTip.Tip="Delete"
                                                    Click="DeleteCacheItem_Click"
                                                    Padding="5,2"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
